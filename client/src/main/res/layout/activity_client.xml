<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/client_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lan.discovery.client.ClientActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/client_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:titleCentered="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/client_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?android:textColorPrimary"
                tools:text="准备连接热点..." />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/client_label_server_ssid">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/server_ssid_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AndroidAP3568"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/client_label_server_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/server_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12345678"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/client_connect_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/client_connect_button" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="24dp"
                android:background="?attr/colorOutline" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/client_label_target_ssid">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/target_ssid_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ASUS_80_5G"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/client_label_target_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/target_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(Asus123!)"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/client_send_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:enabled="false"
                android:text="@string/client_send_button" />
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

